{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "es5",
    "sourceMap": false,
    "outDir": "."
  },
  "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit": false
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "spec/**/*.ts"
  ]
}
